{
	"name": "Short URL Expander/Cleaner",
	"version": "1.0.4",
	"description": "See where you'll go! This extension expands short URLs and cleans/removes 'utm' tracking information. Based on Tactical URL Expander",
	"manifest_version": 2,
	"permissions": [
		"http://api.longurl.org/v2/*"
	],
	"icons": {
		"48": "images/logo48.png",
		"128": "images/logo128.png"
	},
	"options_page" : "options.html",
	"background" : {
		//"page": "background.html"
		"scripts": [ "libs/jquery-1.5.min.js", "libs/jquery.urlExtender.js", "background.js" ]
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
				"js" : ["content.js"]
		}
	],
	"content_security_policy": "script-src 'self'; object-src 'self'; connect-src http://api.longurl.org"
}